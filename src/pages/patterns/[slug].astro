---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { fetchPatternBySlug, fetchPatternSvg, getAllPatternSlugs } from '../../lib/supabase-server';

export async function getStaticPaths() {
  const slugs = await getAllPatternSlugs();
  return slugs.map((slug) => ({ params: { slug } }));
}

const { slug } = Astro.params;

// Fetch pattern data
const pattern = await fetchPatternBySlug(slug as string);

if (!pattern) {
  return Astro.redirect('/patterns');
}

// Fetch SVG content
const svgContent = await fetchPatternSvg(pattern.svg_url);

// Format date
const createdDate = new Date(pattern.created_at).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout 
  title={`${pattern.name} - Sashiko Pattern`}
  description={pattern.notes || `${pattern.name} sashiko pattern by ${pattern.author}. Download and customize this traditional Japanese embroidery design.`}
>
  <section class="bg-gradient-warm py-12 md:py-16">
    <div class="container-marketing">
      <nav class="mb-6">
        <a href="/patterns" class="text-indigo-700 hover:text-indigo-800 text-sm flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          Back to Patterns
        </a>
      </nav>
      
      <div class="grid md:grid-cols-2 gap-8 lg:gap-12 items-start">
        <!-- Pattern Preview -->
        <div class="bg-white rounded-2xl shadow-warm overflow-hidden">
          <div class="aspect-square p-8 flex items-center justify-center" style="background-color: #f5f5dc;">
            {svgContent ? (
              <div 
                class="pattern-preview w-full h-full"
                set:html={svgContent.replace(
                  /<svg/,
                  '<svg class="w-full h-full" style="stroke: #334e68;"'
                )}
              />
            ) : (
              <div class="text-charcoal-400 text-center">
                <svg class="w-16 h-16 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <p>Preview not available</p>
              </div>
            )}
          </div>
        </div>
        
        <!-- Pattern Info -->
        <div>
          <h1 class="text-3xl md:text-4xl font-serif font-bold text-charcoal-900 mb-3">
            {pattern.name}
          </h1>
          <p class="text-lg text-charcoal-600 mb-6">
            by <span class="font-medium text-charcoal-800">{pattern.author}</span>
          </p>
          
          {pattern.notes && (
            <div class="bg-cream-100 rounded-xl p-4 mb-6">
              <p class="text-charcoal-700">{pattern.notes}</p>
            </div>
          )}
          
          <!-- Stats -->
          <div class="flex flex-wrap gap-4 mb-6">
            <div class="flex items-center gap-2 text-charcoal-600">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
              </svg>
              <span>{pattern.download_count.toLocaleString()} downloads</span>
            </div>
            <div class="flex items-center gap-2 text-charcoal-600">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
              <span>{pattern.view_count.toLocaleString()} views</span>
            </div>
          </div>
          
          <!-- Metadata -->
          <div class="space-y-3 mb-8">
            <div class="flex items-center gap-3">
              <span class="text-sm text-charcoal-500 w-20">License:</span>
              <span class="text-sm font-medium text-charcoal-800 px-2 py-1 bg-cream-100 rounded">{pattern.license}</span>
            </div>
            <div class="flex items-center gap-3">
              <span class="text-sm text-charcoal-500 w-20">Added:</span>
              <span class="text-sm text-charcoal-700">{createdDate}</span>
            </div>
          </div>
          
          <!-- Actions -->
          <div class="flex flex-col sm:flex-row gap-4">
            <a 
              href={`/design?pattern=${pattern.slug}`} 
              class="btn-primary btn-lg flex-1 text-center"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
              </svg>
              Open in Design Tool
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Related Patterns Section -->
  <section class="section bg-cream-50">
    <div class="container-marketing">
      <h2 class="text-2xl font-serif font-bold text-charcoal-900 mb-8 text-center">
        Explore More Patterns
      </h2>
      <div class="text-center">
        <a href="/patterns" class="btn-outline">
          View All Patterns
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .pattern-preview :global(svg) {
    max-width: 100%;
    max-height: 100%;
  }
  
  .pattern-preview :global(path),
  .pattern-preview :global(line),
  .pattern-preview :global(polyline),
  .pattern-preview :global(polygon),
  .pattern-preview :global(circle),
  .pattern-preview :global(rect) {
    stroke: #334e68;
    fill: none;
  }
</style>

